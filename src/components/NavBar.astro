---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div
  class="flex flex-column flex-initial w-[full] h-[730px] items-center justify-center content-center relative"
>
  <div class="w-[902px] h-[602px]">
    <header
      class="w-[902px] h-[92px] px-[15px] py-0 justify-between items-center bg-blue-600"
    >
      <div
        class="flex flex-row place-content-center w-[872px] h-[92px] items-end justify-between"
      >
        <div class="flex flex-column w-[275px] h-10 pr-[90px] items-center m-0">
          <h5 class="block ms-0 text-xs text-white font-black">
            Obt√©n las aplicaciones!
