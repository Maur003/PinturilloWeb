---
import {Separator} from '~/components/ui/Separator/Separator.tsx'
import Layout from '~/layouts/Layout.astro'
import Social from '~/components/Github.tsx'
import Developed from "~/components/Developed.tsx";
---
<Layout>
  <main class="container p-3 mx-auto max-w-screen-sm min-h-dvh">
    <Separator className="my-8" />
    <Social client:idle />
    <Separator className="my-8" />
    <Developed />
  </main>
</Layout>

<style>
  body {
    z-index: 1;
    position: relative;
    background-color: rgb(var(--neutral-1));
    background-image: linear-gradient(rgb(var(--neutral-2)) 1px, transparent 1px),
      linear-gradient(to right, rgb(var(--neutral-2)) 1px, rgb(var(--neutral-1)) 1px);
    background-size: 40px 40px;
  }

  body::after {
    z-index: -1;
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: linear-gradient(to bottom, transparent, rgb(var(--neutral-1)));
  }
</style>
