---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <script
      src="https://kit.fontawesome.com/6de3621f9e.js"
      crossorigin="anonymous"></script>
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="background"></div>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: ico;
    src: url(/src/static/fonts/icomoon.eot?v=5);
    src:
      url(/src/static/fonts/icomoon.eot?v=5#iefix) format("embedded-opentype"),
      url(/src/static/fonts/icomoon.woff2?v=5) format("woff2"),
      url(/src/static/fonts/icomoon.woff?v=5) format("woff"),
      url(/src/static/fonts/icomoon.ttf?v=5) format("truetype"),
      url(/src/static/fonts/icomoon.svg?v=5#icomoon) format("svg");
    font-weight: 400;
    font-style: normal;
  }
  @font-face {
    font-family: NunitoBold;
    src: url(/src/static/fonts/nunito-bold.eot);
    src:
      url(/src/static/fonts/nunito-bold.eot?#iefix) format("embedded-opentype"),
      url(/src/static/fonts/nunito-bold.woff2) format("woff2"),
      url(/src/static/fonts/nunito-bold.woff) format("woff"),
      url(/src/static/fonts/nunito-bold.ttf) format("truetype"),
      url(/src/static/fonts/nunito-bold.svg#nunitobold) format("svg");
    font-weight: 400;
    font-style: normal;
  }
  @font-face {
    font-family: NunitoBlack;
    src: url(/src/static/fonts/nunito-black.eot);
    src:
      url(/src/static/fonts/nunito-black.eot?#iefix) format("embedded-opentype"),
      url(/src/static/fonts/nunito-black.woff2) format("woff2"),
      url(/src/static/fonts/nunito-black.woff) format("woff"),
      url(/src/static/fonts/nunito-black.ttf) format("truetype"),
      url(/src/static/fonts/nunito-black.svg#nunitoblack) format("svg");
    font-weight: 400;
    font-style: normal;
  }

  * {
    text-decoration: none;
    margin: 0;
    outline: none;
    padding: 0;
    line-height: 1;
    -webkit-touch-callout: none;
    -moz-touch-callout: none;
    -ms-touch-callout: none;
    -o-touch-callout: none;
    -webkit-text-size-adjust: none;
    -moz-text-size-adjust: none;
    -ms-text-size-adjust: none;
    -o-text-size-adjust: none;
    text-size-adjust: none;
    -webkit-tap-highlight-color: transparent;
    -webkit-tap-highlight-color: transparent;
    -moz-tap-highlight-color: transparent;
    -ms-tap-highlight-color: transparent;
    -o-tap-highlight-color: transparent;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    -o-user-select: none;
    user-select: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body,
  html {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    border: none;
    font-family: Nunito;
    color: #fff;
  }

  body {
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-direction: normal;
    -webkit-box-orient: horizontal;
    -webkit-flex-direction: row;
    -moz-flex-direction: row;
    -ms-flex-direction: row;
    flex-direction: row;
    background-color: #0a5efb;
  }

  #background {
    position: fixed;
    z-index: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  #background:before {
    background-image: url(/src/static/images/textura.png);
    content: "";
    width: 200%;
    display: block;
    position: absolute;
    z-index: 0;
    left: 50%;
    top: 50%;
    height: 200%;
    -webkit-transform: translate(-50%, -50%) rotate(345deg);
    -moz-transform: translate(-50%, -50%) rotate(345deg);
    -ms-transform: translate(-50%, -50%) rotate(345deg);
    -o-transform: translate(-50%, -50%) rotate(345deg);
    transform: translate(-50%, -50%) rotate(345deg);
  }
</style>
